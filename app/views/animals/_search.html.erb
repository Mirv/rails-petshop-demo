<div class="row">
  <div class="col-lg-12 text-center">
    <%= simple_form_for(:search, url: animals_path, html: { id: 'search', class: 'form-horizontal' }, method: :get) do |f| %>
      <div class="form-group">
        <div class="col-xs-12 col-sm-2 col-md-2 marginTopXs10">
          <%= f.text_field :name, placeholder: 'Name of Animal', class: 'form-control' %>
        </div>
        <div class="col-xs-12 col-sm-2 col-md-3 marginTopXs10">
          <%= f.text_field :owner, placeholder: "Owner's Name", class: 'form-control' %>
        </div>
        <div class="col-xs-9 col-sm-4 col-md-3 marginTopXs10">
          <!-- Using classic select_tag here for compability and readness reasons -->
          <%= f.select :breed, @breeds.to_a, { }, { class: 'form-control' } %>
        </div>
        <div class="col-xs-3 col-sm-2 col-md-2 marginTopXs10">
          <!-- Using classic select_tag here for compability and readness reasons -->
          <%= f.select :gender, [['Sex (both)', ''], ['Male', 'male'], ['Female', 'female']], { }, { class: 'form-control' } %>
        </div>
        <div class="col-xs-12 col-sm-2 col-md-2 marginTopXs10">
          <%= f.submit 'Search', class: 'btn btn-success col-xs-12' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
