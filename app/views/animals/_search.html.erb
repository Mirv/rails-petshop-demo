<div class="row">
  <div class="col-lg-12 text-center">
    <%= simple_form_for(:search, url: animals_path, html: { id: 'search', class: 'form-horizontal' }, method: :get) do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
        <%= f.select :gender, [['Both', ''], ['Male', 'male'], ['Female', 'female']], class: 'form-control' %>
        <%= f.select :breed, @breeds.to_a, class: 'form-control' %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Search', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
