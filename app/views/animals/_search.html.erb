<div class="row">
  <div class="col-lg-12 text-center">
    <%= simple_form_for(:search, url: animals_path, html: { id: 'search', class: 'form-horizontal' }, method: :get) do |f| %>
      <div class="form-group">
        <div class="col-xs-12 col-sm-3 col-md-4">
          <%= f.text_field :name, placeholder: 'Name of animal', class: 'form-control' %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <%= f.text_field :owner, placeholder: "Owner's Name", class: 'form-control' %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-3 marginTop7">
          <%= f.select :breed, @breeds.to_a %>
        </div>
        <div class="col-xs-12 col-sm-1 col-md-1 marginTop7">
          <%= f.select :gender, [['Sex (both)', ''], ['Male', 'male'], ['Female', 'female']] %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit 'Search', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
